      <include name="../openjdk-14.0.1!/jdk.scripting.nashorn.shell"/>
      <include name="../openjdk-14.0.1!/jdk.sctp"/>
      <include name="../openjdk-14.0.1!/jdk.security.auth"/>
      <include name="../openjdk-14.0.1!/jdk.security.jgss"/>
      <include name="../openjdk-14.0.1!/jdk.unsupported"/>
      <include name="../openjdk-14.0.1!/jdk.unsupported.desktop"/>
      <include name="../openjdk-14.0.1!/jdk.xml.dom"/>
      <include name="../openjdk-14.0.1!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.openjdk-14}"/>
  <property name="project.jdk.bin" value="${jdk.bin.openjdk-14}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.openjdk-14"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="idea.home" value=""/>
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">

  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SimonDice -->
  
  <dirname property="module.simondice.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.simondice" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.simondice" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.simondice" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.simondice" value="-encoding UTF-8 -source 14 -target 14 ${compiler.args}"/>
  
  <property name="simondice.output.dir" value="${module.simondice.basedir}/out/production/SimonDice"/>
  <property name="simondice.testoutput.dir" value="${module.simondice.basedir}/out/test/SimonDice"/>
  
  <path id="simondice.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="simondice.module.production.classpath">
    <path refid="${module.jdk.classpath.simondice}"/>
  </path>
  
  <path id="simondice.runtime.production.module.classpath">
    <pathelement location="${simondice.output.dir}"/>
  </path>
  
  <path id="simondice.module.classpath">
    <path refid="${module.jdk.classpath.simondice}"/>
    <pathelement location="${simondice.output.dir}"/>
  </path>
  
  <path id="simondice.runtime.module.classpath">
    <pathelement location="${simondice.testoutput.dir}"/>
    <pathelement location="${simondice.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.simondice">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.simondice">
    <patternset refid="excluded.from.module.simondice"/>
  </patternset>
  
  <path id="simondice.module.sourcepath">
    <dirset dir="${module.simondice.basedir}">
      <include name="src"/>
      <include name="img"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.simondice" depends="compile.module.simondice.production,compile.module.simondice.tests" description="Compile module SimonDice"/>
  
  <target name="compile.module.simondice.production" depends="register.custom.compilers" description="Compile module SimonDice; production classes">
    <mkdir dir="${simondice.output.dir}"/>

    
    <copy todir="${simondice.output.dir}">
      <fileset dir="${module.simondice.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.simondice.basedir}/img">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.simondice.tests" depends="register.custom.compilers,compile.module.simondice.production" description="compile module SimonDice; test classes" unless="skip.tests"/>
  
  <target name="clean.module.simondice" description="cleanup module">
    <delete dir="${simondice.output.dir}"/>
    <delete dir="${simondice.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.simondice" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.simondice" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>